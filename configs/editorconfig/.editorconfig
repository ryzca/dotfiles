root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[{*.sh,*.bash,*.zsh,.zsh*}]
indent_style = space
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
